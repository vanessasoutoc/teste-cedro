<% flash.each do |type, message| %>
<% if(message != '') %>
<div class="alert alert<%= bootstrap_class_for(type) %> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p>
        <i class="icon fa fa<%= bootstrap_class_for(type) %>"></i>
        <%= message %>
    </p>
</div>
<% end %>
<% end %>